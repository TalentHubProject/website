---
import ContentSection from "~/components/content-section.astro";

interface SupporterProps {
    logo: string;
    link: string;
    name: string;
}

const supporters: SupporterProps[] = [
    {
        logo: "ltdd.png",
        link: "https://latavernedudesign.fr/",
        name: "La taverne du design",
    },
    {
        logo: "leslabs.gif",
        link: "https://discord.gg/3vC2XWK",
        name: "Les Labs",
    },
    {
        logo: "elkir.png",
        link: "https://elkir.fr/",
        name: "Elkir",
    },
    {
        logo: "discordfrance.png",
        link: "https://discord-france.fr/",
        name: "Discord France",
    }
];
---
<ContentSection title="Ils nous soutiennent" class="supporters w-full">
    <div class="flex items-center justify-center gap-10 flex-wrap">
        {supporters.map((supporter) => (
                <a href={supporter.link} target="_blank" rel="noopener noreferrer" class="opacity-75 hover:opacity-100 transition-opacity duration-300 ease-in-out h-32 w-32">
                    <img src={supporter.logo} alt={supporter.name} />
                </a>
        ))}
    </div>
</ContentSection>
